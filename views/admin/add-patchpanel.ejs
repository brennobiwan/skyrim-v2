<%- include("../partials/top"); -%>


<div class="body">
    <div class="body-content">
  
      <h2 class="title">Add new Patch-Panel</h2>
  
      <form action="/admin/add-patchpanel" method="post" onsubmit="return confirm('Please, confirm the data before hitting OK');">
        <div class="row">
          <label for="">Patch-Panel ID:</label>
          <input type="text" name="patchPanelId" class="form-control" placeholder="Patch-Panel ID" autocomplete="off" autofocus="true" required>
        </div>
  
        <div class="row">
          <label for="">Number of ports (amount of connections this panel supports):</label>
          <input class="form-control" type=Number name="capacity" placeholder="Number of available ports" autocomplete="off" required />
        </div>
  
        <div class="row">
          <label for="">Rack Position (az.room.rack):</label>
          <input type="text" name="rack" class="form-control" placeholder="e.g.: gru1.1-3.11000" autocomplete="off" autofocus="true" required>
        </div>
  
        <div class="row">
          <label for="">Select the connection type for this Patch-Panel:</label>
          <select class="custom-select" name="connectionType" required>
            <option value=""></option>
            <option value="lc">LC</option>
            <option value="sc">SC</option>
            <option value="utp">UTP</option>
          </select>
        </div>
  
        <div>
          <button class="row btn btn-secondary btn-lg btn-block" type="submit">Add</button>
        </div>
      </form>
  
      <a href="/admin/add" class="btn btn-outline-secondary">Return</a>
  
    </div>

<%- include("../partials/bottom"); -%>
